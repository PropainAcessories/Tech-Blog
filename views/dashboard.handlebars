<div class="mb-5">
    <a href="dashboard/new"><button id="create-post" class="button">Create Post</button></a>

    <h2 class="title pb-4">Your posts</h2>
    {{#if posts.length}}
</div>

{{#each posts as |post|}}
{{post-info post}}
<div>
    <a href="/dashboard/edit/{{post.id}}"><button class="mb-5">Edit-Post</button></a>
</div>
{{/each}}

{{else}}
<h6> No posts, Be active!</h6>

{{/if}}
